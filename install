#!/usr/bin/env python3

from getpass import getpass, getuser
import pip
import argparse
import subprocess
import sys
import os


def main(dotfiles_only):
    saved_dir = os.getcwd()
    directory = os.path.expanduser('~/projects/dotfiles/')
    os.makedirs(directory, exist_ok=True)
    os.chdir(directory)
    name = input('Enter name: ')
    email = input('Enter email: ')
    _setup_ssh(email)
    _setup_git(email, name)
    subprocess.run('./install-base.sh', check=True, shell=True)
    subprocess.run('./install-docker.sh', check=True, shell=True)
    subprocess.run('./install-rust.sh', check=True, shell=True)
    subprocess.run('./install-golang.sh', check=True, shell=True)
    subprocess.run('./install-nodejs.sh', check=True, shell=True)
    subprocess.run('./install-ruby.sh', check=True, shell=True)
    subprocess.run('./install-python-3.sh', check=True, shell=True)
    subprocess.run('./install-bash.sh', check=True, shell=True)
    subprocess.run('./install-tmux.sh', check=True, shell=True)
    subprocess.run('./install-vim.sh', check=True, shell=True)
    subprocess.run('./install-themes-and-fonts.sh', check=True, shell=True)

    print('Please log out and back in for all changes to take effect')
    print('Installation Complete!')


def _setup_git(email, name):
    subprocess.run('sudo apt-get update -y && sudo apt-get install git',
                   shell=True, check=True)
    subprocess.run('git clone git@github.com:lbrookeIS/dotfiles.git .',
                   input=b'yes\n', shell=True, check=True)
    res = subprocess.run('./install-git.sh', check=True)
    subprocess.run('git config --global user.email "{}"'.format(email),
                   shell=True, check=True)
    subprocess.run('git config --global user.name "{}"'.format(name),
                   shell=True, check=True)


def _setup_ssh(email):
    subprocess.run('ssh-keygen -t rsa -b 4096 -C "{}"'.format(email),
                   input=b'\n', shell=True, check=True)
    subprocess.run('eval "$(ssh-agent -s)" && ssh-add ~/.ssh/id_rsa',
                   shell=True, check=True)

    pip.main(['install', 'github3.py==0.9.3'])
    from github3 import login
    user = input('GitHub user name: ')
    password = getpass('GitHub user password: ')
    key_name = input('SSH key name: ')
    g = login(user, password)
    with open(os.path.expanduser('~/.ssh/id_rsa.pub'), 'r') as key_file:
        key = g.create_key(key_name, key_file.read())
    if not key:
        raise RuntimeError('SSH key creation failed')
    print('Key added succesfully')

    pip.main(['uninstall', '-y', 'github3.py'])


if __name__ == '__main__':
    parser = argparse.ArgumentParser(
        formatter_class=argparse.ArgumentDefaultsHelpFormatter)

    parser.add_argument('-d', '--dotfiles-only', action='store_true', help='Only install dotfiles')

    args = parser.parse_args()

    try:
        main(**vars(args))
    except KeyboardInterrupt:
        pass
    finally:
        print('\nexiting...')
